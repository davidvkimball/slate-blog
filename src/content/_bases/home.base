filters:
  and:
    - file.ext == "md"
properties:
  note.pubDate:
    displayName: Date
  note.draft:
    displayName: Draft
views:
  - type: cards
    name: Cards
    order:
      - title
      - description
      - tags
      - pubDate
      - draft
    sort:
      - property: pubDate
        direction: DESC
    cardSize: 240
